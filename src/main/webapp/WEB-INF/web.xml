<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>WordsServlet</servlet-name>
        <servlet-class>com.maximKachan.englishDictionary.servlet.WordServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>WordsServlet</servlet-name>
        <url-pattern>/words</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>spring.profiles.default</param-name>
        <param-value>dataJpa</param-value>
    </context-param>
    
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            classpath:spring/springContext.xml
            classpath:spring/spring-db.xml
        </param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
</web-app>